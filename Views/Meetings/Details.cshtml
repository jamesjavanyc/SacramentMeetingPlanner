@model SacramentMeetingPlanner.Models.Meeting

@{
    ViewData["Title"] = "Meeting Details";
}

<h3 class="form-topper">Meeting Details</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Leader)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Leader)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.OpeningSong)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.OpeningSong)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.OpeningPrayer)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.OpeningPrayer)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.SacramentHymn)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.SacramentHymn)
        </dd>
        @if (Model.MusicNumber != null)
        {
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.MusicNumber)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.MusicNumber)
        </dd>
        }
        <dt class="col-sm-12">
            @Html.DisplayNameFor(model => model.Talks)
        </dt>
        <dd class="col-sm-12">
            @if (Model.Talks != null)
            {
                <ul>
                    @foreach (var talk in Model.Talks)
                    {
                        <li>@talk.Topic - @talk.Speaker</li>
                    }
                </ul>
            }
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.ClosingSong)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.ClosingSong)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.ClosingPrayer)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.ClosingPrayer)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm btn-primary my-1">Edit</a>
    <a asp-action="Index" class="btn btn-sm btn-secondary my-1">Back to List</a>
</div>
