@model SacramentMeetingPlanner.Models.Talk

@{
    ViewData["Title"] = "Create";
    List<Meeting> Meetings = ViewBag.Meetings;
}

<h3>New Talk</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MeetingId" class="control-label"></label>
                <select asp-for="MeetingId" class="form-control" asp-for="MeetingId" asp-items="new SelectList(Meetings)">
                    <option value="">--Select--</option>
                </select>
                <input type ="hidden" asp-for="MeetingId"/>
                <span asp-validation-for="MeetingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Speaker" class="control-label"></label>
                <input asp-for="Speaker" class="form-control" />
                <span asp-validation-for="Speaker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic" class="control-label"></label>
                <input asp-for="Topic" class="form-control" />
                <span asp-validation-for="Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Talk" class="btn btn-sm btn-secondary my-1 mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-sm btn-secondary my-1">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
