@model SacramentMeetingPlanner.Models.Talk

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this talk?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MeetingId)
        </dt>
        <dd class = "col-sm-10">
            @Model.Meeting?.Date
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Speaker)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Speaker)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Topic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Topic)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete Talk" class="btn btn-sm btn-danger my-1 " /> 
        <a asp-action="Index" class="btn btn-sm btn-secondary my-1">Back to List</a>
    </form>
</div>
